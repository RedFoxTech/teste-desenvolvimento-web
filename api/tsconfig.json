{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["ES6"],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": false
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"],
}
